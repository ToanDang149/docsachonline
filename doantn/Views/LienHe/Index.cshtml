@{
    ViewData["Title"] = "Liên hệ";
}

<div class="lienhe-container">
    <h2>Liên hệ với chúng tôi</h2>
    <p>Nếu bạn có vấn đề hoặc góp ý nào, vui lòng liên hệ với chúng tôi qua biểu mẫu dưới đây:</p>

    <form method="post" action="/LienHe/GuiLienHe">
        <div class="form-group">
            <label>Họ tên</label>
            <input type="text" name="hoTen" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Nội dung</label>
            <textarea name="noiDung" class="form-control" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn-lienhe">Gửi</button>
    </form>

    <div class="lienhe-extra">
        <p>Hoặc liên hệ với chúng tôi qua:</p>
        <div class="contact-icon-row">
            <i class="fab fa-facebook-f icon-facebook"></i>
            <a href="https://www.facebook.com/ToanDang4903/" target="_blank">facebook.com/ToanDang4903/</a>
        </div>

        <div class="contact-icon-row">
            <i class="fab fa-google icon-google"></i>
            <a href="">bialisua@gmail.com</a>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/lienhe.css" />
}