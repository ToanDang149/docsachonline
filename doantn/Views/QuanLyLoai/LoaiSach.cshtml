@model List<doantn.ViewModel.LoaiQuanLyViewModel>

<div class="page-header">
    <h2>Quản lý loại sách</h2>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên loại sách</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int stt = 1;
                foreach (var loai in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td class="ten-sach">@loai.TenLoai</td>
                        <td>
                            <a href="javascript:void(0)" onclick="openModalSuaLoai('@loai.MaLoai', '@loai.TenLoai')"
                               class="btn btn-sm btn-edit">
                                <i class="fa-solid fa-pen"></i> Sửa
                            </a>
                            <a href="javascript:void(0)" onclick="xoaLoaiSach('@loai.MaLoai', '@loai.TenLoai')"
                               class="btn btn-sm btn-delete">
                                <i class="fa-solid fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                    stt++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">Không có loại sách nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Modal Thêm Loại Sách -->
<div class="modal fade" id="modalThemLoai" tabindex="-1" aria-labelledby="modalThemLoaiLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formThemLoai">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalThemLoaiLabel">Thêm loại sách</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tên loại sách</label>
                        <input type="text" name="TenLoai" id="tenLoaiMoi" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal Sửa Loại Sách -->
<div class="modal fade" id="modalSuaLoai" tabindex="-1" aria-labelledby="modalSuaLoaiLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formSuaLoai">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalSuaLoaiLabel">Chỉnh sửa loại sách</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="maLoaiSua" name="MaLoai" />
                    <div class="mb-3">
                        <label class="form-label">Tên loại sách</label>
                        <input type="text" id="tenLoaiSua" name="TenLoai" class="form-control"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/quanly.css" />
    <link rel="stylesheet" href="~/css/quanlyloai.css" />
}
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/js/qlloai.js"></script>
}
